{
  "family": "document-vault-service",
  "networkMode": "awsvpc",
  "executionRoleArn": "<ECS_EXECUTION_ROLE_ARN>",
  "taskRoleArn": "<ECS_TASK_ROLE_ARN>",
  "cpu": "512",
  "memory": "1024",
  "requiresCompatibilities": ["FARGATE"],
  "containerDefinitions": [
    {
      "name": "document-vault",
      "image": "<IMAGE_URI>",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {"name": "ENVIRONMENT", "value": "<ENVIRONMENT>"},
        {"name": "DATABASE_URL", "value": "<DATABASE_URL>"},
        {"name": "DATABASE_POOL_SIZE", "value": "<DATABASE_POOL_SIZE>"},
        {"name": "DATABASE_MAX_OVERFLOW", "value": "<DATABASE_MAX_OVERFLOW>"},
        {"name": "AWS_REGION", "value": "<AWS_REGION>"},
        {"name": "DOCUMENT_VAULT_BUCKET", "value": "<DOCUMENT_VAULT_BUCKET>"},
        {"name": "AWS_S3_KMS_KEY_ID", "value": "<AWS_S3_KMS_KEY_ID>"},
        {"name": "DOCUMENT_EVENTS_QUEUE_URL", "value": "<DOCUMENT_EVENTS_QUEUE_URL>"},
        {"name": "PRESIGNED_URL_EXPIRATION_SECONDS", "value": "<PRESIGNED_URL_EXPIRATION_SECONDS>"},
        {"name": "LOG_LEVEL", "value": "<LOG_LEVEL>"},
        {"name": "LOG_FORMAT", "value": "<LOG_FORMAT>"},
        {"name": "ACCESS_CONTROL_ALLOW_ALL", "value": "<ACCESS_CONTROL_ALLOW_ALL>"},
        {"name": "BLOCKCHAIN_ENDPOINT_URL", "value": "<BLOCKCHAIN_ENDPOINT_URL>"}
      ],
      "secrets": [
        {
          "name": "JWT_PUBLIC_KEY",
          "valueFrom": "<JWT_PUBLIC_KEY_SSM_ARN>"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "<LOG_GROUP_NAME>",
          "awslogs-region": "<AWS_REGION>",
          "awslogs-stream-prefix": "ecs/document-vault",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/healthz || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 30
      }
    }
  ]
}
